{
  "semi": false,
  "overrides": [
    {
      "files": ["*.js", "*.css", "*.ts"],
      "options": {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "endOfLine": "lf"
      }
    },
    {
      "files": ["*.html", "legacy/**/*.js"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
